# Environment Variables for TrulyClean Website
# Copy this file to .env.local and fill in actual values
# Keep sensitive keys in .env.local, never commit to git

# ============================================
# SITE CONFIGURATION
# ============================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=TrulyClean

# Company Contact Information (from Facebook page)
NEXT_PUBLIC_COMPANY_PHONE=
NEXT_PUBLIC_COMPANY_EMAIL=
NEXT_PUBLIC_COMPANY_ADDRESS=

# ============================================
# EMAIL SERVICE (for quote form submissions)
# Choose ONE option below based on your preference
# ============================================

# Option 1: SendGrid
# SENDGRID_API_KEY=
# SENDGRID_FROM_EMAIL=noreply@trulyclean.com
# SENDGRID_TO_EMAIL=quotes@trulyclean.com

# Option 2: Resend (modern alternative to SendGrid)
# RESEND_API_KEY=
# RESEND_FROM_EMAIL=noreply@trulyclean.com
# RESEND_TO_EMAIL=quotes@trulyclean.com

# Option 3: Nodemailer (Gmail, Outlook, or custom SMTP)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=noreply@trulyclean.com
# EMAIL_TO=quotes@trulyclean.com

# ============================================
# DATABASE (Optional - for storing quote submissions)
# Choose ONE option below
# ============================================

# Option 1: Supabase (PostgreSQL + Auth)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=
# SUPABASE_SERVICE_ROLE_KEY=

# Option 2: Airtable (simple, spreadsheet-based)
# AIRTABLE_API_KEY=
# AIRTABLE_BASE_ID=
# AIRTABLE_TABLE_NAME=Quotes

# Option 3: MongoDB
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# ============================================
# ANALYTICS & TRACKING
# ============================================

# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Plausible Analytics (privacy-focused alternative)
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=trulyclean.com

# ============================================
# CRM INTEGRATION (Optional - for managing quotes)
# ============================================

# HubSpot
# HUBSPOT_API_KEY=
# HUBSPOT_PORTAL_ID=

# Pipedrive
# PIPEDRIVE_API_TOKEN=
# PIPEDRIVE_API_DOMAIN=

# ============================================
# PAYMENT PROCESSING (Future - if adding booking with payment)
# ============================================

# Stripe (for online payments)
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# SOCIAL MEDIA & AUTHENTICATION
# ============================================

# Facebook (optional - for social login or pixel)
# FACEBOOK_APP_ID=
# FACEBOOK_APP_SECRET=
# NEXT_PUBLIC_FACEBOOK_PIXEL_ID=

# ============================================
# NOTIFICATIONS (Optional)
# ============================================

# Slack webhook for quote notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# SMS Notifications (Twilio)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# ============================================
# SECURITY & AUTHENTICATION
# ============================================

# NextAuth.js (if implementing user authentication)
# NEXTAUTH_SECRET=your-secret-key (generate with: openssl rand -base64 32)
# NEXTAUTH_URL=http://localhost:3000

# ============================================
# PERFORMANCE & RATE LIMITING (Optional)
# ============================================

# Upstash Redis (for rate limiting)
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=

# ============================================
# ERROR TRACKING & MONITORING (Optional)
# ============================================

# Sentry (error tracking)
# SENTRY_DSN=
# NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# FEATURE FLAGS & CONFIGURATION
# ============================================

# Feature flags
NEXT_PUBLIC_ENABLE_BOOKING=false
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_ENABLE_TESTIMONIALS=true

# ============================================
# NOTES
# ============================================
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# Keep SECRET keys in .env.local only (not in .env.example)
# Generate secrets with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
